{
    "version": 2,
    "buildCommand": "npm run build",
    "outputDirectory": "client/dist",
    "installCommand": "npm run install-all",
    "env": {
        "NODE_ENV": "production"
    },
    "functions": {
        "server/api/index.js": {
            "runtime": "nodejs20.x"
        }
    },
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/server/api"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}